{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@model/*": ["domain/model/*"],
      "@service/*": ["domain/service/*"],
      "@router/*": ["infrastructure/router/*"],
      "@controller/*": ["infrastructure/controller/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
